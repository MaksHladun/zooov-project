
<div class="modal-section">
  <div class="modal-mob">
    <h3 class="modal-titel">{{titelContent}}</h3>
    <p class="modal-tex">{{titelItemContent}}</p>
  </div>
  <div class="img-modal">
  <img class="modal-img" src="{{logoSrc}}" width="327px" height="421px" alt="">
  <img class="mini-logo" src="{{miniLogoSrs}}" alt="" />
  </div>
  <div class="form-container">
    <div class="modal-pc">
      <h3 class="modal-titel">{{titelContent}}</h3>
      <p class="modal-tex">{{titelItemContent}}</p>
    </div>
    <form id="modal-form" autocomplete="off">
      <label class="modal-label">
        <input class="modal-input" type="name" name="name" required placeholder="Имя">
      </label>
      <label class="modal-label">
        <input class="modal-input" type="tel" name="tel" required placeholder="Телефон">
      </label>
      <label class="modal-label">
        <input class="modal-input" type="addres" name="addres" required placeholder="Адрес">
      </label>
      <label>
        <select class="select-modal" required name="volume">
          <option value="700">700г</option>
          <option value="500">500г</option>
          <option value="300">300г</option>
          <option value="150">150г</option>
          <option value="100">100г</option>
        </select>
      </label>
      <label>
        <input class="amount-form" type="number" name="amount" required min="1" max="100">
      </label>
      <label class="check-tex-modal">
        <input class="chekbox-input-modal" required type="checkbox">
        <span class="icon-chekt-modal"></span>
        Даю согласие на обработку персональных данных
      </label>
      <p class="price-modal">828₽</p>
      <button class="modal-btn" type="submit" id="moda-btn-order">Оформить заказ</button>


    </form>
  </div>
</div>
